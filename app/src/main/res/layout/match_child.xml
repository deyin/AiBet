<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@color/colorChild"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center"
        android:padding="8dp"
        android:text="Man vs Man City" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_match_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="center"
            android:text="001\n英超\n03:30" />

        <TableLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:background="@color/colorTable"
            android:divider="@drawable/table_vertical_divider"
            android:orientation="vertical"
            android:padding="0dp"
            android:showDividers="middle|beginning|end"
            android:stretchColumns="*">

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:divider="@drawable/table_horizontal_divider"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_none_spread"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/spread_background"
                        android:gravity="center"
                        android:text="0" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_win"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_draw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_lose"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="0" />
            </TableRow>

            <TableRow
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:divider="@drawable/table_horizontal_divider"
                android:orientation="horizontal"
                android:showDividers="beginning|middle|end">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.15"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_spread"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/spread_background"
                        android:gravity="center"
                        android:text="-1" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_spread_win"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_spread_draw"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="0" />

                <TextView
                    android:id="@+id/tv_spread_lose"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:gravity="center"
                    android:text="0" />
            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/tv_more_odds"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@color/colorChild"
            android:gravity="center"
            android:padding="8dp"
            android:text="更多" />

    </LinearLayout>

</LinearLayout>
